{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext", // Changed from "es2020"
    "moduleResolution": "bundler", // Added for Bun
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true, // Added
    "types": ["bun-types"], // Added for Bun test support
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
